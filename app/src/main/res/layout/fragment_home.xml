<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:id="@+id/your_aquarium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_aquarium"
        android:textSize="30sp"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="#ccffff"
        android:textColor="@color/white"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:contentDescription="@string/display_image"
        android:id="@+id/aqImage"
        android:layout_width="360dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test01"
        android:background="@drawable/border"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/your_aquarium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addAlarmBtn" />

    <Button
        android:id="@+id/addAlarmBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_task_button"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aqImage"
        app:layout_constraintBottom_toTopOf="@+id/addRecodeBtn"/>

    <Button
        android:id="@+id/addRecodeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_recode_button"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addAlarmBtn"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>